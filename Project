<script>
function checkStrength() {
    const password = document.getElementById("password").value;
    const fill = document.getElementById("strength-fill");
    const feedback = document.getElementById("feedback");

    let score = 0;
    let feedbackText = "";

    if(password.length >= 8) score += 1;
    if(password.length >= 12) score += 1;
    if(/[A-Z]/.test(password)) score += 1;
    if(/[a-z]/.test(password)) score += 1;
    if(/[0-9]/.test(password)) score += 1;
    if(/[^A-Za-z0-9]/.test(password)) score += 1;
    if(!/(.)\1\1/.test(password)) score += 1; // no triple repeating chars

    let entropy = password.length * Math.log2(94);
    score += Math.min(Math.floor(entropy / 28), 3);

    let strength = "";
    let color = "";

    if(score <= 3){
        strength = "Very Weak ‚ö†";
        color = "red";
        fill.style.width = "25%";
    }
    else if(score <= 6){
        strength = "Moderate ‚ö°";
        color = "orange";
        fill.style.width = "50%";
    }
    else if(score <= 9){
        strength = "Strong üí™";
        color = "yellow";
        fill.style.width = "75%";
    }
    else{
        strength = "Very Strong üî•";
        color = "lime";
        fill.style.width = "100%";
    }

    fill.style.background = color;

    feedbackText = `
        Strength: <b style="color:${color}">${strength}</b><br>
        Length: ${password.length} characters<br>
        Estimated Entropy: ${entropy.toFixed(2)} bits
    `;

    feedback.innerHTML = feedbackText;
}
</script>

